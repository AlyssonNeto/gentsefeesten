<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#004252"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="#004252"
        android:layout_height="fill_parent">


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/menu_home"
            android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/menu_home"
                android:contentDescription="@string/menu_home"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#73b5c1"
                android:text="@string/menu_home"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/menu_favorites"
            android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/menu_favorites"
                android:contentDescription="@string/menu_favorites"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#73b5c1"
                android:text="@string/menu_favorites"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/menu_program"
                android:contentDescription="@string/menu_program"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#73b5c1"
                android:text="@string/menu_program"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#003a48"
            android:paddingTop="10dp"
            android:id="@+id/menu_categories"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#73b5c1"
                android:layout_span="2"
                android:text="@string/menu_categories"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#003a48"
            android:paddingTop="10dp"
            android:id="@+id/menu_free"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#73b5c1"
                android:layout_span="2"
                android:text="@string/menu_free"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#003a48"
            android:paddingTop="10dp"
            android:id="@+id/menu_festival"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#73b5c1"
                android:layout_span="2"
                android:text="@string/menu_festival"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>
        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#003a48"
            android:paddingTop="10dp"
            android:id="@+id/menu_locations"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#73b5c1"
                android:layout_span="2"
                android:text="@string/menu_locations"
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="10dp"
            android:paddingBottom="3dp"
            android:id="@+id/menu_settings"
            android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/menu_settings"
                android:contentDescription="@string/menu_settings"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#73b5c1"
                android:text="@string/menu_settings"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="#005768"
            android:visibility="visible"/>

        <TableRow
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/menu_about"
            android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/menu_about"
                android:contentDescription="@string/menu_about"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#73b5c1"
                android:text="@string/menu_about"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textSize="15sp"/>

        </TableRow>

    </TableLayout>

</LinearLayout>